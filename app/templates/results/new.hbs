<div class='row'>
  <form class="form-horizontal" role="form">
    <div class="form-group">
      <label for="result_date" class="col-sm-2 control-label">Result Date</label>
      <div class="col-sm-9">
        {{input class="form-control" id="result_date" placeholder="Result Date" valueBinding="model.date"}}
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default" {{action 'createResult'}}>Save Result</button>
      </div>
    </div>
  </form>
</div>